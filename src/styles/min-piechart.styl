piechart, donutchart
  display block
  position relative

.min-piechart-container
  height: 100%;
  width: 100%;

.piechart-svg
  display block
  margin 0 auto
  transform rotate(-90deg)
  transform-origin center center
  border-radius 50%
  overflow hidden
  width 100%
  height 100%

  circle
    fill none

  .piechart-wheel
    stroke alpha(#858585, .25)

  .piechart-value
    stroke #2196F4
    stroke-dasharray 0 280
    transition stroke-dasharray .3s cubic-bezier(0.18, 0.89, 0.32, 1.28)


piechart
  circle
    stroke-width 31.9

donutchart
  circle
    stroke-width 3
